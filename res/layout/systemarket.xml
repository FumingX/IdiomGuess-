<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goldLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:src="@drawable/marketbg" />
    
    <Button
        android:id="@+id/closeMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/goods"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/closewin2" />

    <LinearLayout
        android:id="@+id/firstGoodLayout"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/goods"
        android:layout_centerVertical="true"
        android:layout_marginLeft="63dp"
        android:background="@drawable/hitbg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/goodOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_weight="4"
            android:src="@drawable/prompt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goodOneName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="名称：解囊相助"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/goodOneWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="作用：提示两字"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/goodTwoPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="价格："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/goodTwoHave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="拥有："
                android:textColor="@color/black" />

            <Button
                android:id="@+id/goodOneBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buybt_selector" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondGoodLayout"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:layout_alignTop="@+id/firstGoodLayout"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/firstGoodLayout"
        android:background="@drawable/hitbg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/goodTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:src="@drawable/delete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/goodTwoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="名称：醍醐灌顶"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/goodTwoWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="作用：消去四字"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/goodTwoPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="价格："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/goodTwoHave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="拥有："
                android:textColor="@color/black" />

            <Button
                android:id="@+id/goodTwoBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buybt_selector" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/moneyLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/goods"
        android:layout_centerHorizontal="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gold" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <TextView
            android:id="@+id/goldnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金币数量"
            android:textColor="@color/black" />

    </LinearLayout>

</RelativeLayout>